{
  "name": "gleam",
  "displayName": "Gleam",
  "description": "Support for Gleam",
  "version": "1.0.0",
  "publisher": "gleam",
  "repository": {
    "type": "git",
    "url": "https://github.com/gleam-lang/vscode-gleam"
  },
  "engines": {
    "vscode": "^1.33.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "icon": "images/icon.png",
  "contributes": {
    "languages": [
      {
        "id": "gleam",
        "aliases": [
          "Gleam",
          "gleam"
        ],
        "extensions": [
          ".gleam"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gleam",
        "scopeName": "source.gleam",
        "path": "./syntaxes/gleam.tmLanguage.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:gleam"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1"
  }
}
